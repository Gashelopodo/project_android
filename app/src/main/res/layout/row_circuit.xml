<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="5dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/colorRed"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:background="@color/colorBlack"
        android:id="@+id/box_circuit">

        <es.mxcircuit.mxcircuit.utils.CalibriFont
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="San MartÃ­n de la Vega"
            android:textColor="@color/colorWhite"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textSize="19sp"
            android:id="@+id/name_circuit"
            android:textStyle="bold"/>

        <es.mxcircuit.mxcircuit.utils.CalibriFont
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="36,5 km"
            android:textSize="19sp"
            android:textColor="@color/colorRed"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/km_circuit"/>

    </LinearLayout>

</LinearLayout>