<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="5dp"
    android:id="@+id/box_notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="30"
            android:background="@color/colorWhite"
            >

            <es.mxcircuit.mxcircuit.utils.CalibriFont
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="San Martín de la Vega"
                android:textColor="@color/colorBlack"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:textSize="19sp"
                android:id="@+id/name_circuit"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@color/colorWhite"
            >

            <es.mxcircuit.mxcircuit.utils.CalibriFont
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mañana miércoles SX Recas de 22:00 a 02:00 con el estreno bocata y bebida, mañana para todos los pilotos tendremos en el circuito al fotógrafo Andres Navarrete Vargas, no te lo puedes perder."
                android:textColor="@color/colorGrayLight"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:id="@+id/description"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="30"
            android:background="@color/colorWhite"
            >

            <es.mxcircuit.mxcircuit.utils.CalibriFont
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ayer a las 10:34"
                android:textColor="@color/colorRed"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textStyle="italic"
                android:id="@+id/time"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
